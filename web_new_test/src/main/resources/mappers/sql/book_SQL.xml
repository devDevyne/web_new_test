<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devyne.newspring.dao.BookDao">

	<!-- 리스트 -->
	<select id="select_list"
		parameterType="com.devyne.newspring.vo.BookVO"
		resultType="com.devyne.newspring.vo.BookVO">
		<![CDATA[  
		select  
		*  
		from  
		book  
	]]>
	</select>

	<!-- 등록 -->
	<insert id="insert"
		parameterType="com.devyne.newspring.vo.BookVO" useGeneratedKeys="true"
		keyProperty="book_id">
		 <![CDATA[
		    insert into book
		    (title, category, price) 
		    values
		    (#{title}, #{category}, #{price})
  		  ]]>
	</insert>

	<!-- 상세 리스트 -->
	<select id="detail"
		parameterType="com.devyne.newspring.vo.BookVO"
		resultType="com.devyne.newspring.vo.BookVO">
	 <![CDATA[
        select
        *
        from
        book
        where
        book_id = #{bookId}   
    ]]>
	</select>



</mapper>